{{!< default}}

<header id="site-head">
    <div id="site-head-content" class="container">
            <nav>
        <ul>
        <li><a href="{{@blog.url}}/">Posts</a></li>
        <li><a href="{{@blog.url}}/work">Work</a></li>
        <li><a href="{{@blog.url}}/about">About</a></li>
        <li><a href="{{@blog.url}}/contact">Contact</a></li>
        </ul>
        </nav>
        <h1 class="blog-title">{{@blog.title}}</h1>
        <h2 class="blog-description">{{@blog.description}}</h2>
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content" role="main">
    
    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <div class="post-image">
            <a href="{{url}}">
                {{content words="0"}}
            </a>
        </div>
        <header class="post-header index inner">
            <span class="post-meta">
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMM DD YYYY"}}
                </time> 
            </span>          
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        </header>
        <section class="post-excerpt inner">
            <p>{{excerpt words="15"}}&hellip;</p>
        </section>
        
    </article>

    {{/foreach}}

    {{pagination}}

</main>