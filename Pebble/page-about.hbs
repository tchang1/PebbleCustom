{{!< default}}

<main class="content" role="main">

    <article class="{{post_class}}">

         {{> topnav}}

        {{#post}}

        <span class="post-meta">{{#if tags}}on {{tags separator=" | "}}{{/if}}</span>

        <h1 class="post-title">{{{title}}}</h1>

        <section class="post-content">
            {{content}}
        </section>

        <footer class="post-footer">

            {{#if author}}
                <section class="author">
                    <h4>{{author.name}}</h4>
                    <p>{{author.bio}}</p>
                </section>
            {{/if}}


        </footer>

        {{/post}}

    </article>

</main>